<!-- When rendered in the browser, the /pizza view should:
  - have a list of every pizza flavor
  - the pizza flavors should also have the location and the picture
-->
<% include ../partials/header %>
<div class='pizza'>
  <% pizza.forEach(function(pizza) { %>
    <div class='my-pizza'>
      <h3><%= pizza.flavor %></h3>
      <span class='location'><%= pizza.location %></span>
      <img class='image' src='<%= pizza.image %>' alt='<%= pizza.flavor %>' + ' pizza'>
    </div>
<%  }) %>
</div>
<% include ../partials/footer %>
